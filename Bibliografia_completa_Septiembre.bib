isbn = {1460-2431 (Electronic)\r0022-0957 (Linking)},
issn = {00220957},
journal = {Journal of Experimental Botany},
keywords = {,Gap-filling,Ostreococcus,metabolic network,network reconstruction},
number = {6},
pages = {2353--2362},
pmid = {22207618},
title = {{Genome-wide metabolic network reconstruction of the picoalga Ostreococcus}},
